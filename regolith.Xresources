## Mod and win keys
i3-wm.mod: Mod1
i3-wm.alt: Mod4

## i3-wm
i3-wm.window.border.size: 0
i3-wm.floatingwindow.border.size: 0
i3-wm.gaps.inner.size: 24
i3-wm.gaps.outer.size: 0
i3-wm.gaps.smart: inverse_outer
i3-wm.gaps.focus_follows_mouse: yes
i3-wm.gaps.workspace_auto_back_and_forth: yes
i3-wm.font: pango:DejaVu Sans Mono 8
i3-wm.workspace.01.name: 1
i3-wm.workspace.02.name: 2
i3-wm.workspace.03.name: 3
